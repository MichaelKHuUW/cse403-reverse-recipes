<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/filter_list_circle"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_circle"
        app:tint="@color/light_blue" />

    <ImageView
        android:id="@+id/filter_list_circle_inner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignStart="@id/filter_list_circle"
        android:layout_alignBottom="@id/filter_list_circle"
        android:layout_alignTop="@id/filter_list_circle"
        android:layout_alignEnd="@id/filter_list_circle"
        android:layout_margin="2dp"
        android:src="@drawable/ic_circle" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:layout_alignStart="@id/filter_list_circle"
        android:layout_alignBottom="@id/filter_list_circle"
        android:layout_alignTop="@id/filter_list_circle"
        android:layout_alignEnd="@id/filter_list_circle"
        android:src="@drawable/orange" />
    <TextView
        android:id="@+id/filter_list_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/filter_list_circle"
        android:layout_alignStart="@id/filter_list_circle"
        android:layout_alignEnd="@id/filter_list_circle"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:text="FRUITS"
        android:textSize="12sp" />


</RelativeLayout>